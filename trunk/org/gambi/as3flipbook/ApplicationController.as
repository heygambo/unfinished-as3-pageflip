package org.gambi.as3flipbook{	import org.gambi.as3flipbook.BookController;		import flash.display.Sprite;	import flash.display.Stage;	import flash.display.StageAlign;	import flash.display.StageQuality;	import flash.display.StageScaleMode;	import flash.events.Event;		public class ApplicationController extends Sprite	{		private var _bookController:BookController;				public function ApplicationController()		{			super();			this.addEventListener(Event.ADDED_TO_STAGE, onAddedToStage, false, 0, true);		}				private function onAddedToStage( event:Event ):void		{			this.removeEventListener(Event.ADDED_TO_STAGE, onAddedToStage);						stage.quality = StageQuality.LOW;			stage.scaleMode = StageScaleMode.NO_SCALE;			stage.align = StageAlign.TOP_LEFT;			stage.stageFocusRect = false;			stage.addEventListener(Event.RESIZE, onResize, false, 0, true);						var bitmapDataArray:Array = new Array();			bitmapDataArray.push(new Seite1());			bitmapDataArray.push(new Seite2());			bitmapDataArray.push(new Seite3());			bitmapDataArray.push(new Seite4());			bitmapDataArray.push(new Seite5());			bitmapDataArray.push(new Seite6());			bitmapDataArray.push(new Seite7());			bitmapDataArray.push(new Seite8());						_bookController = new BookController({ sheetWidth: 424, sheetHeight: 600, bitmapData: bitmapDataArray });			_bookController.addEventListener(BookEvent.BOOK_COMPLETE, onBookComplete, false, 0, true);			_bookController.addEventListener(BookEvent.BOOK_SKIM, onBookSkim, false, 0, true);									this.addChild(_bookController);		}				private function onBookComplete( event:BookEvent ):void		{			_bookController.removeEventListener(BookEvent.BOOK_COMPLETE, onBookComplete);			//_bookController.skimTo(4);		}				private function onBookSkim( event:BookEvent ):void		{			trace(event.currentPageIndex);		}				private function onResize( event:Event ):void		{			_bookController.width = stage.stageWidth;			_bookController.height = stage.stageHeight;		}	}}